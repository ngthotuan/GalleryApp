<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">



    <ImageView
        android:id="@+id/showingImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sample_pic"
        android:scaleType="fitXY"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created date"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="486dp" />
    <ImageView
        android:id="@+id/btnEdit"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:onClick="editOnClick"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_icon"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="525dp" />

    <ImageView
        android:id="@+id/btnFavourite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="favouriteOnClick"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/favourite_icon"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="528dp" />

    <ImageView
        android:id="@+id/btnShare"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="shareOnClick"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/share_icon"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="528dp" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="deleteOnClick"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/trash_bin_icon"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="528dp" />
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="backOnClick"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/btnOption"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="optionOnClick"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/three_dot_icon"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="-14dp" />
</androidx.constraintlayout.widget.ConstraintLayout>