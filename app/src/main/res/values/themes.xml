<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GalleryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_blue</item>
        <item name="colorPrimaryVariant">@color/deep_navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_blue</item>
        <item name="colorSecondaryVariant">@color/deep_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/light_gray</item>
    </style>
    <style name="Theme.GalleryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GalleryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.GalleryApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="NavigationViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:listPreferredItemHeightSmall">45dp</item>
    </style>
</resources>